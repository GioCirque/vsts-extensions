{
    "manifestVersion": 1,
    "id": "tigerpistol-gio-build-tasks",
    "name": "Tiger Pistol Build Tasks",
    "version": "0.2.92",
    "publisher": "tigerpistol-gio",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Tools for building with Tiger Pistol.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "icon.png"
    },
    "files": [
        { "path": "BitBucketPullRequest" },
        { "path": "CompareBranches" },
        { "path": "CreateTestVariables" },
        { "path": "PostToSlackWebHook" },
        { "path": "VersionFromBranch" },
        { "path": "VstsPullRequest" },
        {
            "path": "CodeCoverage/app.js",
            "addressable": true
        },
        {
            "path": "CodeCoverage/chart.html",
            "addressable": true
        },
        {
            "path": "CodeCoverage/config.html",
            "addressable": true
        },
        {
            "path": "CodeCoverage/images",
            "addressable": true
        },
        {
            "path": "CodeCoverage/lib",
            "addressable": true,
            "packagePath": "CodeCoverage/lib"
        }
    ],
    "contributions": [
        {
            "id": "CodeCoverageChartWidget",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog",
                "tigerpistol-gio.tigerpistol-gio-build-tasks.CodeCoverageChartWidget.Configuration"
            ],
            "properties": {
                "name": "Code Coverage Chart",
                "description": "Displays the code coverage for a build definition over time.",
                "catalogIconUrl": "CodeCoverage/images/CatalogIcon.png",
                "previewImageUrl": "CodeCoverage/images/preview.png",
                "uri": "CodeCoverage/chart.html",
                "isNameConfigurable": true,
                "supportedSizes": [
                    {
                        "rowSpan": 1,
                        "columnSpan": 2
                    }
                ],
                "supportedScopes": [
                    "project_team"
                ]
            }
        },
        {
            "id": "CodeCoverageChartWidget.Configuration",
            "type": "ms.vss-dashboards-web.widget-configuration",
            "targets": [
                "ms.vss-dashboards-web.widget-configuration"
            ],
            "properties": {
                "name": "Code Coverage Chart Configuration",
                "description": "Configures the code coverage chart.",
                "uri": "CodeCoverage/config.html"
            }
        },
        {
            "id": "versionfrombranch-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "VersionFromBranch"
            }
        },
        {
            "id": "bitbucketpullrequest-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BitBucketPullRequest"
            }
        },
        {
            "id": "posttoslackwebhook-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "PostToSlackWebHook"
            }
        },
        {
            "id": "createtestvariables-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "CreateTestVariables"
            }
        },
        {
            "id": "comparebranches-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "CompareBranches"
            }
        },
        {
            "id": "vstspullrequest-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "VstsPullRequest"
            }
        }
    ],
    "scopes": [
        "vso.build",
        "vso.test"
    ]
}